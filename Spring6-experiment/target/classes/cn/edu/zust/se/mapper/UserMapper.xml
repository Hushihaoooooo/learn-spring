<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.zust.se.mapper.UserMapper">


    <insert id="register">
        insert into tuser(login_name, real_name, password, tel, email, type, last_login_time)
        VALUES(#{user.userName}, #{user.realName}, #{user.password}, #{user.mobile}, #{user.email}, 1, now())
    </insert>

    <resultMap id="userVoMap" type="cn.edu.zust.se.model.vo.UserVo">
        <result property="userName" column="login_name" />
    </resultMap>

    <select id="getUser" resultType="cn.edu.zust.se.model.vo.UserVo" resultMap="userVoMap">
        SELECT *
        FROM tuser
        WHERE login_name = #{userName}
    </select>
    <select id="listUsers" resultType="cn.edu.zust.se.model.vo.UserVo" resultMap="userVoMap">
        select *
        from tuser
    </select>
</mapper>
